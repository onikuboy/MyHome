<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.innovdrive.myhome.MyHome">

    <Button
        android:id="@+id/SpeechOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getSpeechInput"
        android:text="Speak"
        app:layout_constraintBottom_toTopOf="@+id/SpeechTextOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/SpeechTextOutput"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:text="Pending Command"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/KeyWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SpeechOutput" />

    <TextView
        android:id="@+id/KeyWords"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:text="...Waiting..."
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581" />

</android.support.constraint.ConstraintLayout>
