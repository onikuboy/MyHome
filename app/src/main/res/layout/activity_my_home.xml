<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.innovdrive.myhome.MyHome">

    <Button
        android:id="@+id/SpeechOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getSpeechInput"
        android:text="@string/speakButton"
        app:layout_constraintBottom_toTopOf="@+id/SpeechTextOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectWiFi"
        app:layout_constraintVertical_bias="0.726"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/SpeechTextOutput"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:text="@string/commandTextView"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/KeyWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <TextView
        android:id="@+id/KeyWords"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:text="@string/waitingTextView"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <TextView
        android:id="@+id/URLResponse"
        android:layout_width="395dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="644dp"
        android:layout_marginBottom="22dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/configuredWiFiList"
        android:layout_width="395dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="114dp"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/SpeechOutput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/selectWiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectButton"
        app:layout_constraintBottom_toTopOf="@+id/SpeechOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configuredWiFiList" />

    <TextView
        android:id="@+id/comment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="103dp"
        android:text="@string/select"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activeWiFi"
        android:layout_width="400dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/comment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="@string/Active"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
